{
    "version": "2.1.5",
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist/",
        "lib": ["es6", "dom"],
        "types": [
          "node",
          "react",
          "jest",
          "redux"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "examples"
    ]
}
